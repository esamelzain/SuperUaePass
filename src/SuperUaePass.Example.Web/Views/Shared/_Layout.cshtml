<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SuperUaePass</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SuperUaePass.Example.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body class="bg-gray-50">
    <!-- Modern Navigation -->
    <nav class="navbar navbar-expand-lg navbar-white bg-white shadow-sm border-b">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center fw-bold text-gray-900" asp-area="" asp-controller="Home" asp-action="Index">
                <div class="brand-icon me-2">
                    <i class="fas fa-shield-alt text-blue-600"></i>
                </div>
                <span>SuperUaePass</span>
            </a>

            <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <!-- Left Side - Main Navigation -->
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link px-3 py-2 rounded-lg" asp-area="" asp-controller="Home" asp-action="Index">
                            <i class="fas fa-home me-2"></i>Home
                        </a>
                    </li>
                    @{
                        var isAuthenticated = Context.Session.GetString("IsAuthenticated");
                        if (!string.IsNullOrEmpty(isAuthenticated) && isAuthenticated == "true")
                        {
                            <li class="nav-item">
                                <a class="nav-link px-3 py-2 rounded-lg" asp-area="" asp-controller="Home" asp-action="Profile">
                                    <i class="fas fa-user me-2"></i>Profile
                                </a>
                            </li>
                        }
                    }
                </ul>

                <!-- Right Side - Documentation & About -->
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link px-3 py-2 rounded-lg" asp-area="" asp-controller="Home" asp-action="Documentation">
                            <i class="fas fa-book me-2"></i>Documentation
                        </a>
                    </li>
                    
                    <li class="nav-item">
                        <a class="nav-link px-3 py-2 rounded-lg" asp-area="" asp-controller="Home" asp-action="About">
                            <i class="fas fa-info-circle me-2"></i>About
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="py-8">
        @RenderBody()
    </main>

    <!-- Modern Footer -->
    <footer class="bg-white border-t border-gray-200 py-8 mt-12">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <p class="mb-0 text-gray-600">&copy; 2024 SuperUaePass</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <a asp-area="" asp-controller="Home" asp-action="About" class="text-gray-600 text-decoration-none hover:text-blue-600">About Developer</a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<style>
/* Modern Design System - Inspired by Laravel, Tailwind UI */
:root {
    --blue-50: #eff6ff;
    --blue-100: #dbeafe;
    --blue-500: #3b82f6;
    --blue-600: #2563eb;
    --blue-700: #1d4ed8;
    --gray-50: #f9fafb;
    --gray-100: #f3f4f6;
    --gray-200: #e5e7eb;
    --gray-300: #d1d5db;
    --gray-400: #9ca3af;
    --gray-500: #6b7280;
    --gray-600: #4b5563;
    --gray-700: #374151;
    --gray-800: #1f2937;
    --gray-900: #111827;
    --green-500: #10b981;
    --red-500: #ef4444;
    --yellow-500: #f59e0b;
    --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
    --shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1);
    --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
    --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
    --shadow-xl: 0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1);
}

/* Utility Classes */
.bg-gray-50 { background-color: var(--gray-50) !important; }
.bg-white { background-color: white !important; }
.text-gray-600 { color: var(--gray-600) !important; }
.text-gray-900 { color: var(--gray-900) !important; }
.text-blue-600 { color: var(--blue-600) !important; }
.border-b { border-bottom: 1px solid var(--gray-200) !important; }
.border-t { border-top: 1px solid var(--gray-200) !important; }
.border-gray-200 { border-color: var(--gray-200) !important; }
.shadow-sm { box-shadow: var(--shadow-sm) !important; }
.rounded-lg { border-radius: 0.5rem !important; }
.py-8 { padding-top: 5rem !important; padding-bottom: 2rem !important; }
.mt-12 { margin-top: 3rem !important; }
.hover\:text-blue-600:hover { color: var(--blue-600) !important; }

/* Global Styles */
body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    line-height: 1.6;
    color: var(--gray-700);
    background-color: var(--gray-50);
}

/* Fixed Header with Glass Effect */
.navbar {
    position: fixed !important;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1030;
    background: rgba(255, 255, 255, 0.95) !important;
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
}

/* Adjust main content for fixed header */
main {
    padding-top: 140px !important;
    min-height: calc(100vh - 140px);
}

/* Container adjustments for fixed header */
.container {
    padding-top: 0;
}

/* UAE Pass Button - Just Image, No Styling */
.uaepass-button {
    display: inline-block;
    text-decoration: none;
    padding: 0;
    border: none;
    background: none;
    box-shadow: none;
    cursor: pointer;
    min-width: 340px;
}

.uaepass-button img {
    max-height: 60px;
    width: auto;
    display: block;
}

/* Modern Cards */
.card {
    border: none;
    border-radius: 12px;
    box-shadow: var(--shadow);
    transition: all 0.2s ease;
    background: white;
    overflow: hidden;
}

.card:hover {
    box-shadow: var(--shadow-lg);
    transform: translateY(-2px);
}

.card-header {
    background: linear-gradient(135deg, var(--blue-600), var(--blue-700));
    color: white;
    border: none;
    padding: 1.25rem 1.5rem;
    font-weight: 600;
}

/* Modern Buttons */
.btn {
    border-radius: 8px;
    font-weight: 500;
    padding: 0.75rem 1.5rem;
    transition: all 0.2s ease;
    border: none;
    position: relative;
    overflow: hidden;
}

.btn:hover {
    transform: translateY(-1px);
    box-shadow: var(--shadow-md);
}

.btn-primary {
    background: linear-gradient(135deg, var(--blue-600), var(--blue-700));
    color: white;
}

.btn-primary:hover {
    background: linear-gradient(135deg, var(--blue-700), var(--blue-600));
}

.btn-outline-primary {
    border: 2px solid var(--blue-600);
    color: var(--blue-600);
    background: transparent;
}

.btn-outline-primary:hover {
    background: var(--blue-600);
    color: white;
}

.btn-danger {
    background: linear-gradient(135deg, var(--red-500), #dc2626);
    color: white;
}

.btn-outline-danger {
    border: 2px solid var(--red-500);
    color: var(--red-500);
    background: transparent;
}

.btn-outline-danger:hover {
    background: var(--red-500);
    color: white;
}

/* Modern Alerts */
.alert {
    border: none;
    border-radius: 12px;
    padding: 1rem 1.25rem;
    font-weight: 500;
    box-shadow: var(--shadow-sm);
}

.alert-success {
    background: linear-gradient(135deg, var(--green-500), #059669);
    color: white;
}

.alert-warning {
    background: linear-gradient(135deg, var(--yellow-500), #d97706);
    color: white;
}

/* Modern Tables */
.table {
    border-radius: 12px;
    overflow: hidden;
    box-shadow: var(--shadow);
    background: white;
}

.table thead th {
    background: linear-gradient(135deg, var(--blue-600), var(--blue-700));
    color: white;
    border: none;
    font-weight: 600;
    padding: 1rem;
}

.table tbody td {
    border: none;
    padding: 1rem;
    border-bottom: 1px solid var(--gray-100);
}

.table tbody tr:hover {
    background: var(--gray-50);
}

/* Modern Badges */
.badge {
    border-radius: 6px;
    font-weight: 500;
    padding: 0.5rem 0.75rem;
    font-size: 0.875rem;
}

.bg-success {
    background: linear-gradient(135deg, var(--green-500), #059669) !important;
}

.bg-primary {
    background: linear-gradient(135deg, var(--blue-600), var(--blue-700)) !important;
}

.bg-warning {
    background: linear-gradient(135deg, var(--yellow-500), #d97706) !important;
}

/* Responsive Design */
@@media (max-width: 768px) {
    .navbar-nav .nav-link {
        padding: 0.75rem 1rem !important;
        margin: 0.25rem 0;
    }
    
    .uaepass-button {
        min-width: 280px;
        min-height: 70px;
    }
    
    .uaepass-button img {
        max-height: 50px;
    }
    
    .brand-icon {
        width: 28px;
        height: 28px;
        font-size: 1rem;
    }
}

/* Animations */
@@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.fade-in-up {
    animation: fadeInUp 0.6s ease-out;
}

/* Glass Morphism */
.glass {
    background: rgba(255, 255, 255, 0.25);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.18);
}
</style>
